<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0   http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>sc.fiji</groupId>
		<artifactId>pom-fiji</artifactId>
		<version>26.1.1</version>
	</parent>

	<artifactId>MAARS_</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>MAARS</name>

	<description>A Micro-Manager plugin for cell biology analysis</description>

	<properties>
		<scijava.jvm.version>1.8</scijava.jvm.version>
		<maven.javadoc.skip>true</maven.javadoc.skip>
		<project.micromanager.dependencies>
			/Applications/ImageJ/plugins/Micro-Manager/
		</project.micromanager.dependencies>
		<project.micromanager.version>
			ref_MM_dependency
		</project.micromanager.version>
	</properties>

	<developers>

		<developer>
			<id>BioinfoTongLI</id>
			<name>Tong Li</name>
			<email>tongli.bioinfo@gmail.com</email>
		</developer>

		<developer>
			<id>hadim</id>
			<name>Hadrien Mary</name>
			<email>hadrien.mary@gmail.com</email>
		</developer>

	</developers>

	<scm>
		<connection>scm:git:git://github.com/bnoi/MAARS</connection>
		<developerConnection>scm:git:git@github.com:bnoi/MAARS</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/bnoi/MAARS</url>
	</scm>

	<dependencies>

		<!--MAARS compilation need these dependencies-->

		<dependency>
			<groupId>org.micromanager</groupId>
			<artifactId>MMJ_</artifactId>
			<version>${project.micromanager.version}</version>
			<scope>system</scope>
			<systemPath>${project.micromanager.dependencies}MMJ_.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.micromanager</groupId>
			<artifactId>MMCoreJ</artifactId>
			<version>${project.micromanager.version}</version>
			<scope>system</scope>
			<systemPath>${project.micromanager.dependencies}MMCoreJ.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.micromanager</groupId>
			<artifactId>MMAcqEngine</artifactId>
			<version>${project.micromanager.version}</version>
			<scope>system</scope>
			<systemPath>${project.micromanager.dependencies}MMAcqEngine.jar</systemPath>
		</dependency>

		<dependency>
			<groupId>org.apache</groupId>
			<artifactId>commons</artifactId>
			<version>${project.micromanager.version}</version>
			<scope>system</scope>
			<systemPath>${project.micromanager.dependencies}commons-math3-3.4.1.jar</systemPath>
		</dependency>

		<!--MAARS specific dependencies -->

		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4</version>
		</dependency>

		<dependency>
			<groupId>ome</groupId>
			<artifactId>bio-formats_plugins</artifactId>
			<!--<version>5.2.0</version>-->
		</dependency>

		<dependency>
			<groupId>sc.fiji</groupId>
			<artifactId>TrackMate_</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom2</artifactId>
			<version>2.0.6</version>
		</dependency>

    </dependencies>

	<repositories>
		<repository>
			<id>imagej.public</id>
			<url>http://maven.imagej.net/content/groups/public</url>
		</repository>
	</repositories>

	<build>
	<plugins>
	<plugin>
	<artifactId>maven-enforcer-plugin</artifactId>
	<configuration>
	<rules>
	<banClasses
	implementation="org.scijava.maven.plugin.enforcer.BanDuplicateClasses">
	<dependencies>
	<!-- org.json clashes -->
	<dependency>
	<artifactId>MMJ_</artifactId>
	<ignoreClasses>
	<ignoreClass>org/json/*</ignoreClass>
	</ignoreClasses>
	</dependency>
	</dependencies>
	<findAllDuplicates>true</findAllDuplicates>
	</banClasses>
	</rules>
	</configuration>
	</plugin>

	</plugins>
	</build>
</project>
